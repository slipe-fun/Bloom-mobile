{
  "editor.formatOnSave": true,

  "editor.defaultFormatter": "biomejs.biome",

  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  }
}
